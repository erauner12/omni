{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs"
  ],
  "enabledManagers": [
    "docker-compose",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^cluster-template-cloud.yaml$"],
      "matchStrings": [
        "talos:\\n\\s*version:\\s*(?<currentValue>.*?)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "siderolabs/talos"
    }
  ]
}
